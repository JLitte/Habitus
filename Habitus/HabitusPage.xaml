<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habitus.HabitusPage"
             BackgroundColor="#f5f5f5">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="2"
                         Orientation="Horizontal"
                         Spacing="5"
                         Margin="0,10,0,0"
                         VerticalOptions="Center"
                         HorizontalOptions="End">
                <Image Source="avatar.png"
                       WidthRequest="24"
                       HeightRequest="24"/>
                <Label Text="Juan Litterini"
                       FontSize="12"
                       TextColor="Black"
                       WidthRequest="90"
                       VerticalOptions="Center"/>
            </StackLayout>
        </Grid>

        <!-- Contenido Central -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20"
                                 Spacing="25"
                                 HorizontalOptions="Center"
                                 VerticalOptions="CenterAndExpand">

                <!-- Icono de Bienvenida -->
                <Image Source="logo.png"
                       WidthRequest="120"
                       HeightRequest="100"
                       HorizontalOptions="Center"/>

                <!-- Texto Bienvenida -->
                <Label Text="¡Bienvenido a Habitus!"
                       FontAttributes="Bold"
                       FontSize="20"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <!-- Frame con texto descriptivo -->
                <Frame BackgroundColor="White"
                       BorderColor="LightGray"
                       CornerRadius="15"
                       Padding="20"
                       HorizontalOptions="Center"
                       HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         Spacing="15">

                        <Image Source="capacitacion.png"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalOptions="Center"/>

                        <Label Text="Esta aplicación te permitirá registrar tus hábitos diarios como ejercicio, alimentación, el progreso de tus metas y las horas de sueño, ayudándote a mejorar así tu estilo de vida."
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               TextColor="Black"
                               LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Línea divisoria y número -->
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="10"
                             VerticalOptions="Center">
                    <BoxView WidthRequest="60"
                             HeightRequest="1"
                             Color="Black"/>
                    <Label Text="*"
                           FontSize="14"
                           TextColor="Black"/>
                    <BoxView WidthRequest="60"
                             HeightRequest="1"
                             Color="Black"/>
                </StackLayout>

                <!-- Texto redes sociales -->
                <Label Text="¡Encontranos en nuestras redes y compartí tus resultados!"
                       FontSize="13"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>

                <!-- Íconos redes sociales -->
                <HorizontalStackLayout Spacing="15"
                                       HorizontalOptions="Center">
                    <Image Source="facebook.png"
                           WidthRequest="35"
                           HeightRequest="35"/>
                    <Image Source="instagram.png"
                           WidthRequest="35"
                           HeightRequest="35"/>
                    <Image Source="x.png"
                           WidthRequest="35"
                           HeightRequest="35"/>
                    <Image Source="tiktok.png"
                           WidthRequest="35"
                           HeightRequest="35"/>
                    <Image Source="spotify.png"
                           WidthRequest="35"
                           HeightRequest="35"/>
                    <Image Source="youtube.png"
                           WidthRequest="35"
                           HeightRequest="35"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
